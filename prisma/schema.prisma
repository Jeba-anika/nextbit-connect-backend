generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User{
  id String @id @default(uuid())
  name String
  email String @unique
  password String
  role UserRole
  contactNo String
  address String @default("")
  district Districts @default(DHAKA)
}

model Category{
  id String @id @default(uuid())
  title String
  books Service[]
}

model Service{
  id String @id @default(uuid())
  title String
  speed String
  price Float
  time String
  talkTime String
  categoryId String
  category Category @relation(fields: [categoryId], references: [id])
  // reviewAndRatings ReviewAndRating[]
}

